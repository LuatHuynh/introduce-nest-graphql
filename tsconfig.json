{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@entities": ["./src/entities"],
      "@modules/*": ["./src/modules/*"],
      "@config": ["./src/config"],
      "@mock/*": ["./src/__mock__/*"],
      "@const/*": ["./src/const/*"],
      "@decorators/*": ["./src/customDecorators/*"]
    }
  }
}
